<h1>Listing products</h1>

<table>
  <thead>
    <tr>
	  <th>Image</th>
      <th>Title</th>
      <th>Description</th>
      <th>Price</th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
	    <td><img src="<%= product.image_url %>" width="100" /></td>
        <td><%= product.title %></td>
        <td><%= product.description %></td>
		<td><%= number_to_currency (product.price) %></td>
        <td><%= link_to 'View', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Delete', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Create New Product', new_product_path %>
